# API
POST  /api/register-movie        controller.DataController.registerMovie(movieId: String)
POST  /api/register-top-movies   controller.DataController.registerTopMovies()
POST  /api/enqueue-translation   controller.DataController.enqueueTranslation(movieId: String, quoteId: String)
POST  /api/enqueue-top-quotes    controller.DataController.enqueueTopQuotes(count: Int)

GET   /api/games/meta            controller.GameController.meta(releaseYearMin: Int ?= 1900, releaseYearMax: Int ?= 2100, readOutQuote: Boolean ?= false)
GET   /api/games                 controller.GameController.getOne(releaseYearMin: Int ?= 1900, releaseYearMax: Int ?= 2100, readOutQuote: Boolean ?= false)

GET   /                          controller.GameController.start()
GET   /game                      controller.GameController.game(releaseYearMin: Int ?= 1900, releaseYearMax: Int ?= 2100, readOutQuote: Boolean ?= false)

# Admin
GET   /admin                     controller.AdminUiController.movies()
GET   /admin/movies/:movieId     controller.AdminUiController.movieQuotes(movieId: String)
GET   /admin/agents              controller.AgentController.ui()
GET   /admin/translations        controller.AdminUiController.translations(page: Option[Int])

GET   /api/agents                controller.AgentController.state()
POST  /api/agents/:name/start    controller.AgentController.start(name: String)
POST  /api/agents/:name/stop     controller.AgentController.stop(name: String)

# Frontend
